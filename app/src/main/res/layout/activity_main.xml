<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="56dp"
        android:text="선택하기"
        app:layout_constraintEnd_toEndOf="@+id/numberPicker"
        app:layout_constraintTop_toBottomOf="@+id/numberPicker" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="초기화"
        app:layout_constraintBaseline_toBaselineOf="@+id/addBtn"
        app:layout_constraintStart_toEndOf="@+id/addBtn" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBtn">

        <TextView
            android:id="@+id/firstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="18sp"
            android:visibility="gone"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/secondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="18sp"
            android:visibility="gone"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/thirdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="18sp"
            android:visibility="gone"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/fourthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/fifthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="18sp"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/sixthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:background="@drawable/circle_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="visible"/>


    </LinearLayout>

    <Button
        android:id="@+id/randomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="524dp"
        android:text="랜덤 뽑기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>